<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent"
    tools:context=".EventDetails">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/event_detailed_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@drawable/la"/>

            <TextView
                android:id="@+id/event_detailed_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_black"
                android:text="Los Angeles, USA"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:padding="10dp"/>

            <TextView
                android:id="@+id/event_detailed_description_short"
                android:lineSpacingExtra="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:text="Most auspicious event of the year in the city of Los Angeles. Witnessed by more thn 20 thousand people every year. Be a part of this grand event."
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:paddingBottom="8dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/calendar"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Date :"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:padding="6dp"/>

                    <TextView
                        android:id="@+id/event_detailed_date"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="24th November 2020"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:padding="6dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/clock"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Time :"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:padding="6dp"/>

                    <TextView
                        android:id="@+id/event_detailed_time"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="10:00 AM"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:padding="6dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/map"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Venue :"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:padding="6dp"/>

                    <TextView
                        android:id="@+id/event_detailed_venue"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Temple, LA"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:padding="6dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/mode"
                        app:tint="@android:color/white" />

                    <TextView
                        android:id="@+id/event_detailed_mode"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Mode :"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:padding="6dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Online Only"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:padding="6dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/info"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="Event Details"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/white" />

            <TextView
                android:id="@+id/event_detailed_description_long"
                android:lineSpacingExtra="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:text="@string/home_content"
                android:padding="14dp"
                />

            <TextView
                android:lineSpacingExtra="1dp"
                android:layout_marginTop="-12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:text="Some of the statistics of previous event held at Los Angeles in 2019"
                android:padding="14dp"
                />

            <LinearLayout
                android:padding="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/event_detailed_devotees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="20K+"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/montserrat_black"
                        android:textSize="20sp"/>

                    <TextView
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Devotees"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/event_detailed_countries"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="30+"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/montserrat_black"
                        android:textSize="20sp"/>

                    <TextView
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Countries"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="14sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/event_detailed_organizations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="200+"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/montserrat_black"
                        android:textSize="20sp"/>

                    <TextView
                        android:padding="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Organizations"
                        android:textAlignment="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/priest"
                    app:tint="@android:color/white" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_bold"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="About Priests"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="15dp"
                android:background="@android:color/white" />

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/light_frame"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/dummy"
                    app:riv_border_color="@color/yogaAccent"
                    app:riv_border_width="4dp"
                    app:riv_corner_radius="37dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:padding="8dp"
                        android:text="Shri Badree Prasad"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="-10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:text="@string/dummy"
                        android:padding="6dp"
                        />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/light_frame"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/dummy"
                    app:riv_border_color="@color/yogaAccent"
                    app:riv_border_width="4dp"
                    app:riv_corner_radius="37dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:padding="8dp"
                        android:text="Shri Badree Prasad"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_marginTop="-10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        android:text="@string/dummy"
                        android:padding="6dp"
                        />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/button_register"
                android:onClick="register"
                android:elevation="0dp"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Register"
                android:background="@drawable/roundbutton"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/montserrat_bold"
                android:textAllCaps="false"/>

            <Button
                android:visibility="gone"
                android:id="@+id/premium_button"
                android:onClick="buyPremium"
                android:elevation="0dp"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Buy Premium Thalis"
                android:background="@drawable/roundbutton"
                android:backgroundTint="@color/yogaAccent"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/montserrat_bold"
                android:textAllCaps="false"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>